{
  "root": true,
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "dot-location": [
      "warn",
      "property"
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "eqeqeq": [
      "warn",
      "always"
    ],
    "indent": [
      "warn",
      4
    ],
    "max-len": [
      "warn",
      80
    ],
    "no-eval": [
      "error",
      {"allowIndirect": false}
    ],
    "no-implied-eval": "error",
    "no-trailing-spaces": [
      "error",
      {
        "ignoreComments": false,
        "skipBlankLines": false
      }
    ],
    "no-var": "error",
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "semi-spacing": [
      "warn",
      {
        "after": true,
        "before": false
      }
    ]
  }
}
